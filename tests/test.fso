(include "stdio.h")
(include "stdlib.h")

(func hello [(name char*)] void {
	(printf "Hello, %s!\n" name)
})

(func main [(argc int) (argv char**)] int {
	(decl test int)
	(set test 2)
	(set test (+ test 2))

	(if [= argc 1] {
		(hello "Turing Tarpit")
		(printf "Value: %d\n" test)
	})

	(decl i int)
	(set i 0)

	(while [< i 10] {
		(printf "I: %d\n" i)
		(set i (+ i 1))
	})

	(printf "%d %d %d" 1 2 3)

	(return 0)
})
